{
    "arrowParens": "always",
    "useTabs": true,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "quoteProps": "as-needed",
    "tabWidth": 4,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "singleQuote": false,
                "tabWidth": 2
            }
        }
    ]
}
